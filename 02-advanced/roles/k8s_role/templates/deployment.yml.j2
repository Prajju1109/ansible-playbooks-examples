
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name | default('sample-app') }}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{ app_name | default('sample-app') }}
  template:
    metadata:
      labels:
        app: {{ app_name | default('sample-app') }}
    spec:
      containers:
        - name: web
          image: {{ image | default('nginx:stable') }}
          ports:
            - containerPort: 80
